generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id          BigInt   @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean  @default(false)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  user_id     String   @db.Uuid
  
  @@map("todos")
}
